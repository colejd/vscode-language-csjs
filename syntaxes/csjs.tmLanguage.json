{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"scopeName": "source.csjs",
	"name": "CSJS",
	"fileTypes": [
		"csjs.js"
  ],
  "patterns": [
    {
      "comment": "CSJS block rules",
      "begin": "csjs`",
      "end": "`",
      "patterns": [
        {
          "comment": "Highlight JS in ${} blocks",
          "begin": "\\$\\{",
          "end": "\\}",
          "patterns": [ { "include": "source.js" } ]
        },
        {"include": "source.css"}
      ]
    },

    { 
      "comment": "Highlight JS in the rest of the file",
      "include": "source.js" 
    }

  ]
}